<div class="container-fluid">
    <div class="row">
        <div class="col s12">
            <div class="panel panel-default">
                <div class="panel-heading">Forgot your password?</div>
                <div class="panel-body">
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
					  <%= devise_error_messages! %>

					<div class="form-group">
		            	<label class="col-md-4 control-label">E-Mail Address</label>
		            	<div class="col-md-6">
		                	<%= f.email_field :email, autofocus: true, class: 'form-control' %>
		            	</div>
		          	</div>

					<div class="form-group">
						<div class="col-md-6 col-md-offset-4">
						<%= f.submit "Send me reset password instructions", class: 'btn blue-grey btn-primary' %>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>