<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <div class="card-heading"><h5>Login</h5></div>
        <div class="row">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
          <div class="col s12">
            <div class="input-field col s12">
              <%= f.email_field :email, class: 'form-control' %>
              <label for="email">Email Address</label>
            </div>

            <div class="input-field col s12">
              <%= f.password_field :password, class: 'form-control' %>
              <label for="password">Password</label>
            </div>
            <div class="input-field col s12">
                <div class="checkbox" style="margin-bottom: 10px">
                  <% if devise_mapping.rememberable? -%>
                    <%= f.check_box :remember_me %>
                    <label for="user_remember_me">Remember me</label>
                  <% end %>
                </div>
            </div>
            <div class="input-field col s12">
              <%= f.submit "Log in", class: 'waves-effect waves-light btn blue-grey' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'waves-effect waves-light btn blue-grey' %>
              <p style="margin-top: 10px">Do not own an account? <a href="/users/sign_up">Register</a></p>
            </div>
          </div>
          <% end %>
        </div>
      </div>
  </div>
  </div>
</div>