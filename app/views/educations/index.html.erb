<p id="notice"><%= notice %></p>

<h1>Listing Educations</h1>

<table>
  <thead>
    <tr>
      <th>Major</th>
      <th>Minor</th>
      <th>Degree</th>
      <th>Gpa</th>
      <th>Class of</th>
      <th>Is enrolled</th>
      <th>Resume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.major %></td>
        <td><%= education.minor %></td>
        <td><%= education.degree %></td>
        <td><%= education.gpa %></td>
        <td><%= education.class_of %></td>
        <td><%= education.is_enrolled %></td>
        <td><%= education.resume %></td>
        <td><%= link_to 'Show', education %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

